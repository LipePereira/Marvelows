<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/small_spacing"
    >
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.lipedev.mervelows.views.SquareImageView
        android:id="@+id/item_image"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />

    <TextView
        android:id="@+id/title"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_image"

        android:textAppearance="@style/TextAppearance.AppCompat.Body1"

        android:layout_marginLeft="@dimen/medium_spacing"
        android:layout_marginRight="@dimen/medium_spacing"
        android:layout_marginTop="@dimen/small_spacing"

        android:text="Title Here"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/launched"

        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:textAppearance="@style/TextAppearance.AppCompat.Caption"

        android:layout_marginLeft="@dimen/medium_spacing"
        android:layout_marginBottom="@dimen/medium_spacing"

        android:text="@string/launch_date"
        />

    <TextView
        android:id="@+id/date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintLeft_toRightOf="@id/launched"
        app:layout_constraintRight_toRightOf="parent"

        android:layout_marginLeft="@dimen/extra_small_spacing"

        android:textAppearance="@style/TextAppearance.AppCompat.Caption"

        android:text="Date/He/Re"
        />

</android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>